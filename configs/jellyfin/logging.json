{
	"Serilog": {
		"MinimumLevel": {
			"Default": "Debug",
			"Override": {
				"Microsoft": "Debug",
				"System": "Debug"
			}
		},
		"WriteTo": [
			{
				"Name": "Console",
				"Args": {
					"outputTemplate": "[{Timestamp:h:mm:ss}] [{Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}{NewLine}",
					"theme": "Serilog.Sinks.SystemConsole.Themes.ConsoleTheme::None, Serilog.Sinks.Console"
				}
			},
			{
				"Name": "Async",
				"Args": {
					"configure": [
						{
							"Name": "File",
							"Args": {
								"outputTemplate": "[{Timestamp:h:mm:ss}] [{Level:u3}] [{ThreadId}] {SourceContext}: {Message}{NewLine}{Exception}{NewLine}"
							}
						}
					]
				}
			}
		],
		"WriteTo:Graylog": {
			"Name": "Async",
			"Args": {
				"configure": [
					{
						"Name": "Graylog",
						"Args": {
							"host": "127.0.0.1",
							"hostnameOrAddress": "127.0.0.1",
							"includeMessageTemplate": true,
							"messageIdGeneratorType": "Timestamp",
							"messageTemplateFieldName": "message_template",
							"minimumLogEventLevel": "Debug",
							"port": 18066,
							"restrictedToMinimumLevel": "Debug",
							"shortMessageMaxLength": 8192,
							"transportType": "Tcp"
						}
					}
				]
			}
		}
	}
}
