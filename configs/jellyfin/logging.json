{
	"Serilog": {
		"MinimumLevel": {
			"Default": "Information",
			"Override": {
				"Microsoft": "Information",
				"System": "Information"
			}
		},
		"WriteTo": [
			{
				"Name": "Console",
				"Args": {
					"outputTemplate": "[{Timestamp:h:mm:ss}] [{Level:u4}] {SourceContext}: {Message:lj}{NewLine}{Exception}{NewLine}",
					"restrictedToMinimumLevel": "Information",
					"theme": "Serilog.Sinks.SystemConsole.Themes.ConsoleTheme::None, Serilog.Sinks.Console"
				}
			},
			{
				"Name": "Async",
				"Args": {
					"configure": [
						{
							"Name": "File",
							"Args": {
								"outputTemplate": "[{Timestamp:h:mm:ss}] [{Level:u4}] {SourceContext}: {Message}{NewLine}{Exception}{NewLine}",
								"restrictedToMinimumLevel": "Information"
							}
						}
					]
				}
			}
		],
		"WriteTo:Graylog": {
			"Name": "Async",
			"Args": {
				"configure": [
					{
						"Name": "Graylog",
						"Args": {
							"hostnameOrAddress": "127.0.0.1",
							"includeMessageTemplate": true,
							"messageIdGeneratorType": "Timestamp",
							"messageTemplateFieldName": "message_template",
							"minimumLogEventLevel": "Debug",
							"port": 18066,
							"restrictedToMinimumLevel": "Information",
							"shortMessageMaxLength": 4096,
							"transportType": "Tcp"
						}
					}
				]
			}
		}
	}
}
